{
    "rules": {
        "short": {
            ".read": true,
            ".write": false,
            ".validate": "newData.isString() && newData.val().matches(/^(https?:\\/\\/)?((([a-z0-9]([a-z0-9-]*[a-z0-9])*)\\.)+[a-z]{2,}|((0-9{1,3}\\.){3}0-9{1,3}))(\\:0-9+)?(\\/[-a-z0-9%_.~+]*)*(\\?[;&a-z0-9%_.~+=-]*)?(\\#[-a-z0-9_]*)?$/"
        }
    }
}
